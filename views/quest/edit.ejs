<!--
*  Quest details view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to display a quest.
*
* @author Sai Rohith Gorla <S538416@nwmissouri.edu>
-->

<div class="card">
    <div class="card-header">
      Edit Quest
    </div>
    <div class="card-body">
      <form action="/quest/save/<%= quest.id %>" method="post">
        <div class="form-group">
          <label for="name">Quest Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= quest.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="id">Quest Id:</label>
          <input type="number" class="form-control" id="id" name="id" value="<%= quest.id %>" min=1 max=100 step=1 default=2
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= quest.isCartoon %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Created?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>
