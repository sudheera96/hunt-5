<!--
*  User index view - helpful during development
*  (the default page)
*  
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to list all users.
*
* @author Denise Case <dcase@nwmissouri.edu>

* based on https://www.mynotepaper.com/nodejs-simple-crud-with-expressjs-and-mysql
* repo https://github.com/mdobydullah/nodejs-crud-with-expressjs-mysql

-->

<% if (locals.users.success) { %>
  <div class="alert alert-success" role="alert"><%- user.success %></div>
  <% } %>
  
  <% if (locals.users.error) { %>
  <div class="alert alert-danger" role="alert"><%- user.error %></div>
  <% } %>
  
  <div class="card">
    <div class="card-header">
      <ul class="nav nav-pills w-100">
        <li class="nav-pill active">
          <a class="nav-link">Rabbits</a>
        </li>
        <li class="nav-pill ml-auto">
          <a class="nav-link active" href="/user/create"><i class="fas fa-plus"></i></a>
        </li>
      </ul>
    </div>
    <div class="card-body">
  
      <% if(users.length) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i< users.length; i++) { %>
          <tr>
            <th scope="row"><%= users[i].id %></th>
            <td><%= users[i].email%></td>
            <td><%= users[i].password%></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
  
      <!-- if result is empty -->
      <% if(!users.length) { %>
      <p class="text-center">No users found!</p>
      <% } %>
  
      <br>
      <h3>Mouse over icons to see where you will go.</h3>
  
    </div>
  </div>