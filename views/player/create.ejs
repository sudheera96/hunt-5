<!--
*  Player create view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to create a new resource.
*
-->
<% if (player && player.error) { %>
    <div class="alert alert-danger" role="alert"><%- JSON.stringify(player.error) %></div>
    <% } %>
  
  <div class="card">
    <div class="card-header">
      Add Player
    </div>
    <div class="card-body">
      <form action="/animal/save" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= player.name %>" autocomplete="off">
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </div>
  