<!--
*  Team edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit a team.
*
* @author Denise Case <dcase@nwmissouri.edu>
-->

<div class="card">
  <div class="card-header">
    Edit Team
  </div>
  <div class="card-body">
    <form action="/team/save/<%= team.id %>" method="post">
      <div class="form-group">
        <label for="name">Team Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= team.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="id">Team Id:</label>
        <input type="number" class="form-control" id="id" name="id" value="<%= team.id %>" min=1 max=100 step=1 default=2
          autocomplete="off">
      </div>
      <br>
      <!-- Checked checkbox -->
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox" value="<%= team.isCartoon %>" checked />
        <label class="form-check-label" for="checkbox">
          Is Created?
        </label>
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
      </div>
    </form>
  </div>
</div>